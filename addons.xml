<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
        
<addon id="plugin.program.kodibx" name="kodibx" version="1.1.4" provider-name="kodibx">
  <requires>
	<import addon="xbmc.python" version="2.14.0"/>
	<import addon="script.common.plugin.cache" version="0.9.1"/>
  <import addon="repository.kodibx" version="0.0.4"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="fr">kodibx</summary>
    <description lang="fr">wizard kodibx</description>
    <summary lang="en">kodibx</summary>
    <description lang="en">Wizard kodibx</description>
    <platform>all</platform>
  </extension>
</addon>        
        

<addon id="repository.kodibx"
        name="kodibx Repository"
        version="0.0.4"
        provider-name="kodibx">
    <extension point="xbmc.addon.repository" name="kodibx XBMC Addon Repository">
        <checksum>https://raw.githubusercontent.com/kodibx/kodi-xbmc-addons/master/addons.xml.md5</checksum>
        <info compressed="false">https://raw.githubusercontent.com/kodibx/kodi-xbmc-addons/master/addons.xml</info>
        <datadir zip="true">https://github.com/kodibx/kodi-xbmc-addons/raw/master/repo</datadir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="fr">kodibx Repository</summary>
        <description lang="fr">Installer vStream</description>
        <summary lang="en">kodibx Repository</summary>
        <description lang="en">Download and install kodibx</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
